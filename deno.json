{
  "name": "@xln3/panpan",
  "version": "0.2.1",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "exclude": [".claude/", "docs/*.jpg", "docs/*.png"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.8",
    "@cliffy/ansi": "jsr:@cliffy/ansi@1.0.0-rc.8",
    "@std/fmt": "jsr:@std/fmt@1.0.8",
    "@std/fs": "jsr:@std/fs@1.0.21",
    "@std/path": "jsr:@std/path@1.1.4",
    "@db/sqlite": "jsr:@db/sqlite@0.12",
    "@xenova/transformers": "npm:@xenova/transformers@2.17.2",
    "openai": "npm:openai@6.15.0",
    "nodemailer": "npm:nodemailer@6.10.1",
    "zod": "npm:zod@4.3.4",
    "@mozilla/readability": "npm:@mozilla/readability@0.6.0",
    "jsdom": "npm:jsdom@27.4.0",
    "playwright": "npm:playwright@1.57.0",
    "typescript": "npm:typescript@5.9.3"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch mod.ts",
    "run": "deno run --allow-all mod.ts",
    "check": "deno check mod.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run test/",
    "test:unit": "deno test --allow-read --allow-write --allow-env test/core/ test/llm/ test/utils/ test/config/",
    "test:tools": "deno test --allow-read --allow-write --allow-run test/tools/",
    "test:coverage": "deno test --coverage=coverage/ --allow-all test/",
    "test:watch": "deno test --watch --allow-all test/",
    "webtool": "deno run -A npm:playwright@1.57.0 install --with-deps chromium",
    "setup": "deno task webtool"
  },
  "compilerOptions": {
    "strict": true
  }
}
